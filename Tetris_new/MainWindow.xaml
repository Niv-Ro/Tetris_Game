<Window x:Class="Tetris_new.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tetris_new"
        mc:Ignorable="d"
        Title="Tetris" Height="600" Width="800"
        MinWidth="600" MinHeight="600" Foreground="White" 
        FontSize="28" KeyDown="Window_KeyDown">
    
    <Border CornerRadius="6" BorderBrush="IndianRed" BorderThickness="4">
        <Grid>
            <Grid.RowDefinitions>
                 <RowDefinition Height="auto"/>
                 <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <Grid.ColumnDefinitions>
                 <ColumnDefinition Width="*"/>
                 <ColumnDefinition Width="auto"/>
                 <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid.Background>
                 <ImageBrush ImageSource = "Assets\background  tetris_2.png"/>
            </Grid.Background>

             <Viewbox Grid.Row="1" Grid.Column="1" Margin="0,0,0,20">
                 <Border CornerRadius="6" BorderBrush="White" BorderThickness="4">
                     <Canvas x:Name="GameCanvas" Background="Black" Width="250" Height="515" ClipToBounds="True" Loaded="GameCanvas_Loaded"/>
                  </Border>
             </Viewbox>

            <Border  CornerRadius="6" BorderBrush="LightSlateGray" BorderThickness="3" Margin="0,5,0,7" Grid.Column="1" Grid.Row="0" Background="GhostWhite">
                 <TextBlock x:Name="ScoreText" Grid.Row="0" Grid.Column="1" Text="Score: " Margin="0,10" Foreground="DarkSlateGray" TextAlignment="Center"/>
            </Border>
            
            
             <StackPanel Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Right" Height="134" Margin="0,65,0,164">
                 <Border Margin="5" CornerRadius="6"  BorderBrush="LightSlateGray" BorderThickness="3" Background="GhostWhite" Height="124" Width="255">
                     <TextBlock TextAlignment="Center"  Margin="6,6,6,-4"><Run Foreground="DarkSlateGray" FontSize="20" FontWeight="Bold" Text="To play use:"/><LineBreak/><Run Foreground="DarkSlateGray" FontSize="18" Text="left,down,right"/><LineBreak/><Run Foreground="DarkSlateGray" FontSize="20"  FontWeight="Bold" Text="to rotate block:"/><LineBreak/><Run Foreground="DarkSlateGray" FontSize="18" Text="up,z"/></TextBlock>
                 </Border>
             </StackPanel>

             <StackPanel Grid.Row="1" Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Left">
                <Border CornerRadius="6" BorderBrush="LightSlateGray" BorderThickness="3" Background="GhostWhite">
                    <TextBlock Foreground="DarkSlateGray" Text="Next Block" FontSize="30"  TextAlignment="Center" />
                </Border>
                <Border Margin="5" CornerRadius="6" BorderBrush="White" BorderThickness="4" Background="Black">
                     <Image x:Name="NextImage" Margin="20" Width="125"/>
                 </Border>
             </StackPanel>

             <Grid x:Name="NewGameMenu" Grid.RowSpan="2" Grid.ColumnSpan="3" Visibility="Hidden">
                <Grid.Background>
                    <ImageBrush ImageSource="Assets\background  tetris_2.png"/>
                </Grid.Background>
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Border Margin="5" CornerRadius="6" BorderBrush="LightSlateGray" Background="WhiteSmoke" BorderThickness="3">
                        <TextBlock Margin="50,0" Text="TETRIS" FontSize="55" TextAlignment="Center" Foreground="DarkSlateGray"/>
                    </Border>
                    <Button Width="200" Background="LightBlue" BorderBrush="LightBlue" Content="Start Game" Margin="0,0,0,0" Padding="5" Click="StartNewGame"/>
                </StackPanel>
            </Grid>


            <Grid x:Name="reEnterGameMenu" Grid.RowSpan="2" Grid.ColumnSpan="3" Visibility="Hidden">
                <Grid.Background>
                    <ImageBrush ImageSource="Assets\background  tetris_2.png"/>
                </Grid.Background>
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Border Margin="5" CornerRadius="6" BorderBrush="LightSlateGray" Background="WhiteSmoke" BorderThickness="3">
                        <TextBlock Margin="50,0" Text="TETRIS" FontSize="55" TextAlignment="Center" Foreground="DarkSlateGray"/>
                    </Border>
                    <Border Margin="0,5,0,7">
                        <Button Width="200" Background="LightBlue" BorderBrush="LightBlue" Content="New Game" Margin="0,0,0,0" Padding="5" Click="NewGame"/>
                    </Border>
                    <Button Width="200" Background="LightBlue" BorderBrush="LightBlue" Content="Resume Game" Margin="0,0,0,0" Padding="5" Click="ResumeGame"/>
                </StackPanel>
            </Grid>



            <Grid x:Name="GameOverMenu" Grid.RowSpan="2" Grid.ColumnSpan="3" Visibility="Hidden">
                <Grid.Background>
                    <ImageBrush ImageSource="Assets\background  tetris_2.png"/>
                </Grid.Background>
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Border Margin="5" CornerRadius="6" BorderBrush="LightSlateGray" Background="WhiteSmoke" BorderThickness="3">
                        <TextBlock Margin="50,0" Text="Game Over" FontSize="48" TextAlignment="Center" Foreground="DarkSlateGray"/>
                    </Border>
                    <Border Margin="5" CornerRadius="6" BorderBrush="LightSlateGray" Background="WhiteSmoke" BorderThickness="3" Width="250">
                        <TextBlock  Margin="0,0,0,0" x:Name="FinalScoreText" Text="Score: " FontSize="36" TextAlignment="Center" Foreground="DarkSlateGray"/>
                    </Border>
                    <Button Width="200" Background="LightBlue" BorderBrush="LightBlue" Content="Play Again" Margin="0,0,0,0" Padding="5" Click="Button_Click"/>
                </StackPanel>
             </Grid>
            
          </Grid>
    </Border>
</Window>

